{
    "name": "@releaseband/vite-plugin-meta",
    "version": "0.4.2",
    "description": "",
    "license": "MIT",
    "type": "module",
    "main": "dist/index.cjs",
    "module": "dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/releaseband/vite-plugin-meta.git"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "build": "tsup-node src/index.ts src/convert.ts --sourcemap --clean --dts --format cjs,esm",
        "dev": "pnpm build --watch",
        "changeset": "changeset",
        "version": "changeset version && pnpm install --lockfile-only",
        "publish": "pnpm run build && changeset publish"
    },
    "bin": {
        "file-convert": "dist/convert.js"
    },
    "dependencies": {
        "ffmpeg-static": "^5.2.0",
        "ffprobe": "^1.1.2",
        "ffprobe-static": "^3.1.0",
        "picocolors": "^1.0.0",
        "sharp": "^0.33.2"
    },
    "devDependencies": {
        "@changesets/changelog-github": "^0.4.4",
        "@changesets/cli": "^2.22.0",
        "@commitlint/cli": "^16.2.4",
        "@commitlint/cz-commitlint": "^16.2.4",
        "@releaseband/commitlint-config": "^1.0.4",
        "tsup": "^6.7.0",
        "typescript": "^5.2.2",
        "vite": "^5.4.8"
    },
    "peerDependencies": {
        "vite": "^5.4.8"
    },
    "peerDependenciesMeta": {
        "vite": {
            "optional": true
        }
    },
    "engines": {
        "node": ">=18",
        "pnpm": ">=7"
    },
    "packageManager": "pnpm@7.32.2"
}
