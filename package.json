{
	"name": "@releaseband/vite-plugin-meta",
	"version": "0.1.4",
	"description": "",
	"license": "MIT",
	"type": "module",
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/releaseband/vite-plugin-meta.git"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "tsup-node src/index.ts src/updateHash.ts --sourcemap --clean --dts --format cjs,esm",
		"dev": "pnpm build --watch",
		"changeset": "changeset",
		"version": "changeset version && pnpm install --lockfile-only",
		"publish": "pnpm run build && changeset publish"
	},
	"bin": {
		"ufs": "dist/updateHash.js"
	},
	"dependencies": {
		"ffmpeg-static": "^5.1.0",
		"ffprobe": "^1.1.2",
		"ffprobe-static": "^3.1.0",
		"picocolors": "^1.0.0",
		"sharp": "^0.31.2"
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.4.4",
		"@changesets/cli": "^2.22.0",
		"@commitlint/cli": "^16.2.4",
		"@commitlint/cz-commitlint": "^16.2.4",
		"@releaseband/commitlint-config": "^1.0.4",
		"@types/sharp": "^0.31.0",
		"tsup": "^6.7.0",
		"typescript": "^5.0.2",
		"vite": "^4.0.4"
	},
	"peerDependencies": {
		"vite": "^4.0.4"
	},
	"peerDependenciesMeta": {
		"vite": {
			"optional": true
		}
	},
	"packageManager": "pnpm@7.17.0",
	"engines": {
		"node": ">=16.0.0",
		"pnpm": ">=7.0.0"
	}
}
